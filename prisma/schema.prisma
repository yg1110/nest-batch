datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

model BatchSchedule {
  id          String   @id @default(uuid())
  jobId       String
  status      BatchStatus @default(PENDING)
  scheduledAt DateTime
  executedAt  DateTime?
  payload     Json?
  createdAt   DateTime @default(now())
}

enum BatchStatus {
  PENDING
  RUNNING
  DONE
  FAILED
}
